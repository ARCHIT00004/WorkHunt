# Production Environment Variables for Vercel Deployment
# These should be set in Vercel Dashboard → Settings → Environment Variables

# MongoDB Atlas Connection (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/workhunt?retryWrites=true&w=majority

# JWT Secret Key (REQUIRED - Use a strong, unique secret)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Server Port (Vercel handles this automatically)
PORT=4000

# Frontend URL (REQUIRED - Your deployed frontend URL)
CLIENT_ORIGIN=https://your-frontend-name.vercel.app

# Alternative CORS origin (same as CLIENT_ORIGIN)
CORS_ORIGIN=https://your-frontend-name.vercel.app

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Node Environment
NODE_ENV=production