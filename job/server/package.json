{
  // Backend server configuration for the Node.js API
  "name": "workhunt-backend",
  "version": "1.0.0",
  "description": "Node.js + Express + MongoDB backend for WorkHunt job board",
  "main": "src/index.js", // The main file that starts the server
  
  "scripts": {
    // Start the development server (runs on http://localhost:4000)
    "dev": "node src/index.js",
    // Start the production server (for deployment)
    "start": "node src/index.js",
    // Build command (not needed for Node.js but some platforms expect it)
    "build": "echo 'No build step required for Node.js'"
  },
  
  // All the libraries needed to run the backend server
  "dependencies": {
    "bcryptjs": "^2.4.3",           // Encrypt passwords securely
    "cors": "^2.8.5",               // Allow frontend to communicate with backend (Cross-Origin Resource Sharing)
    "dotenv": "^16.4.5",            // Load environment variables from .env file
    "express": "^4.19.2",           // Web framework for creating API endpoints
    "jsonwebtoken": "^9.0.2",       // Create and verify JWT tokens for user authentication
    "mongodb-memory-server": "^9.1.0", // In-memory MongoDB for testing
    "mongoose": "^8.5.1",           // MongoDB object modeling library (makes database operations easier)
    "morgan": "^1.10.0",            // HTTP request logger (shows API calls in console)
    "multer": "^1.4.5-lts.1",       // Handle file uploads (for resume uploads)
    "nodemailer": "^6.10.1"         // Send emails (for contact form and notifications)
  }
}
